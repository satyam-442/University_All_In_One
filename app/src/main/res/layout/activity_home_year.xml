<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/home_drawer_layout"
    android:background="@drawable/main_visiblity">

    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/home_page_toolbar"
            layout="@layout/app_bar_layout">
        </include>

<LinearLayout
    android:layout_below="@id/home_page_toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:id="@+id/first_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/sem1"
                    android:layout_width="350dp"
                    android:layout_height="180dp"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#FF9800">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back6">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="118dp"
                        android:text="SEMESTER"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I"
                        android:textColor="#fff"
                        android:textSize="80sp"
                        android:layout_marginStart="212dp"
                        android:layout_marginTop="90dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp">

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/sem2"
                    android:layout_width="350dp"
                    android:layout_height="178dp"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#CF1616">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back7">

                    </ImageView>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEMESTER"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_marginStart="105dp"
                        android:layout_marginTop="120dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="II"
                        android:textColor="#fff"
                        android:textSize="80sp"
                        android:layout_marginStart="305dp"
                        android:layout_marginTop="88dp">

                    </TextView>

                </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:id="@+id/sem3"
                        android:layout_width="346dp"
                        android:layout_height="180dp"
                        android:layout_margin="12dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#3F51B5">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/back8">

                        </ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEMESTER"
                            android:textColor="#fff"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="118dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="III"
                            android:textColor="#fff"
                            android:textSize="80sp"
                            android:layout_marginStart="212dp"
                            android:layout_marginTop="90dp">

                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp">

                        <androidx.cardview.widget.CardView
                            android:clickable="true"
                            android:id="@+id/sem4"
                            android:layout_width="350dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="#4CAF50">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back10">

                            </ImageView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SEMESTER"
                                android:textColor="#fff"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:layout_marginStart="90dp"
                                android:layout_marginTop="120dp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IV"
                                android:textColor="#fff"
                                android:textSize="80sp"
                                android:layout_marginStart="280dp"
                                android:layout_marginTop="88dp">

                            </TextView>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:id="@+id/sem5"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="12dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#F4511E">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/back5">

                        </ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEMESTER"
                            android:textColor="#fff"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="118dp">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="V"
                            android:textColor="#fff"
                            android:textSize="80sp"
                            android:layout_marginStart="212dp"
                            android:layout_marginTop="90dp">
                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp">

                        <androidx.cardview.widget.CardView
                            android:clickable="true"
                            android:id="@+id/sem6"
                            android:layout_width="350dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="#475353">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back7">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SEMESTER"
                                android:textColor="#fff"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:layout_marginStart="90dp"
                                android:layout_marginTop="120dp">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VI"
                                android:textColor="#fff"
                                android:textSize="80sp"
                                android:layout_marginStart="280dp"
                                android:layout_marginTop="88dp">
                            </TextView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

</LinearLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:theme="@style/NavTextSize"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/navigation_menu"
        android:id="@+id/navigation_view"
        android:background="@drawable/image_visiblity">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>