<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/home_drawer_layout"
    android:background="#f2efe8">

    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/home_page_toolbar"
            layout="@layout/app_bar_layout">
        </include>

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/home_page_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="74dp"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e2cf90">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/firstSemester"
                                    android:layout_width="155dp"
                                    android:layout_height="95dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/firstsemlogo" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e2cf90">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/secondSemester"
                                    android:layout_width="155dp"
                                    android:layout_height="95dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/secondsemlogo" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="180dp"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e2cf90">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/thirdSemester"
                                    android:layout_width="155dp"
                                    android:layout_height="95dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/thirdsemlogo" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e2cf90">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/fourthSemester"
                                    android:layout_width="155dp"
                                    android:layout_height="95dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/forthsemlogo" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="285dp"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e2cf90">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/fifthSemester"
                                    android:layout_width="155dp"
                                    android:layout_height="95dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/fifthsemlogo" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e2cf90">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/sixthSemester"
                                    android:layout_width="155dp"
                                    android:layout_height="95dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/sixthsemlogo" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="31dp"
                        android:text="All The Best"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/navigation_menu"
        android:id="@+id/navigation_view">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>