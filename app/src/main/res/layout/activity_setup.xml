<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sign_studEmail"
            android:layout_alignEnd="@+id/setup_fullname"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/pacifico"
            android:text="Digital Identity"
            android:textSize="41sp" />

        <EditText
            android:id="@+id/setup_fullname"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/customize_inputs"
            android:ems="15"
            android:hint="Ful-name"
            android:inputType="textPersonName"
            android:labelFor="@id/login_user_name"
            android:textColor="#000000"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/setup_fathersname"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/setup_fullname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/customize_inputs"
            android:ems="15"
            android:hint="Father's Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/setup_rollno"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/setup_fathersname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/customize_inputs"
            android:ems="15"
            android:hint="Roll No."
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/setup_contact"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/setup_rollno"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/customize_inputs"
            android:ems="15"
            android:hint="Contact No."
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/setup_uid"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/setup_contact"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/customize_inputs"
            android:ems="15"
            android:hint="Unique ID"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/setup_email"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="42dp"
            android:layout_below="@+id/setup_uid"
            android:background="@drawable/customize_inputs"
            android:ems="15"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:labelFor="@id/login_user_name"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/setup_password"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/setup_email"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/customize_inputs"
            android:ems="15"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <Button
            android:id="@+id/setup_saveInfo"
            android:layout_width="135dp"
            android:layout_height="42dp"
            android:layout_below="@+id/setup_password"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/custumbuttons"
            android:fontFamily="monospace"
            android:text="Save Info"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/needHelpRegis"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setup_password"
            android:layout_alignEnd="@+id/setup_password"
            android:layout_marginStart="50dp"
            android:layout_marginTop="34dp"
            android:layout_toEndOf="@+id/login_button"
            android:fontFamily="@font/bitter"
            android:gravity="end"
            android:textSize="18sp"
            android:text="Need Help?"
            android:textColor="@color/red"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>