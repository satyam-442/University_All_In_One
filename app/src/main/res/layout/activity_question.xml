<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:layout_marginEnd="50dp"/>

    <ImageView
        android:id="@+id/addQuestionPopup"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/search_view"
        android:layout_marginEnd="1dp"
        android:background="#e9ebee"
        android:src="@drawable/circle_add"
        android:padding="12dp"/>

    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Query"
        app:searchCloseIcon="@drawable/close">

    </com.miguelcatalan.materialsearchview.MaterialSearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_stud_query_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>