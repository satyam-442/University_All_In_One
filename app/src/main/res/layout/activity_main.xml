<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    android:background="@drawable/main_visiblity">


    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/main_page_toolbar"
            layout="@layout/app_bar_layout"
            android:layout_height="0dp"
            android:layout_width="match_parent">
        </include>

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/main_page_toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/homeTop"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:src="@drawable/pa"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Discover Your Need"
                            android:fontFamily="@font/alegreya"
                            android:textSize="24sp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/homeTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="5dp"
                                android:clipToPadding="false"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    app:cardBackgroundColor="#DFDCD4"
                                    app:cardCornerRadius="5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/syllabus"
                                            android:layout_width="155dp"
                                            android:layout_height="95dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/syllabus" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="3dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/grey"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Syllabus"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="15dp"/>

                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    app:cardBackgroundColor="#DFDCD4"
                                    app:cardCornerRadius="5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/ppt"
                                            android:layout_width="155dp"
                                            android:layout_height="95dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ppt" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="3dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/grey"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Presentation"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="15dp"/>

                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="5dp"
                                android:clipToPadding="false"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardBackgroundColor="#DFDCD4">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/videos"
                                            android:layout_width="155dp"
                                            android:layout_height="95dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/video" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="3dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/grey"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Video Lecture"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="15dp"/>

                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardBackgroundColor="#DFDCD4">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/question"
                                            android:layout_width="155dp"
                                            android:layout_height="95dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/questionpic" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="3dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/grey"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Question Paper"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="15dp"/>

                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="5dp"
                                android:clipToPadding="false"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="140dp"
                                    app:cardCornerRadius="5dp"
                                    android:layout_margin="10dp"
                                    app:cardBackgroundColor="#DFDCD4">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/blog"
                                            android:layout_width="155dp"
                                            android:layout_height="95dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/blog" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="3dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/grey"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Teacher's Blog"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="15dp"/>

                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardBackgroundColor="#DFDCD4">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="140dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/feedback"
                                            android:layout_width="155dp"
                                            android:layout_height="95dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/feedback" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="3dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/grey"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Feedback"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="15dp"/>

                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/navigation_menu"
        android:id="@+id/navigation_view">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>