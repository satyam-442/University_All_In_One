<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/forgot_password_toolbar"
        layout="@layout/app_bar_layout"/>


    <ImageView
        android:id="@+id/backarrowReset"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/hello"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/backarrow" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reset_password_email_input"
        android:layout_alignEnd="@+id/reset_password_email_input"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-17dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pacifico"
        android:text="Sorry to see you!"
        android:textSize="39sp" />

    <EditText
        android:id="@+id/reset_password_email_input"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/customize_inputs"
        android:ems="15"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:labelFor="@id/login_user_name"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="135dp"
        android:layout_height="42dp"
        android:layout_below="@+id/reset_password_email_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/custumbuttons"
        android:fontFamily="monospace"
        android:text="Request"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>