<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="@drawable/blurback">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/reser_image_viiblity"/>

    <include
        android:id="@+id/forgot_password_toolbar"
        layout="@layout/app_bar_layout"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="127dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="347dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Password Reset Link will be send you after you provide your Registered E-mail address"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/reset_password_email_input"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:background="@drawable/inputs"
        android:ems="15"
        android:gravity="center"
        android:hint="Enter Register E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Request Link"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:gravity="center"/>


</RelativeLayout>