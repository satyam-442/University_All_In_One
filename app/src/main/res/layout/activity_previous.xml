<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviousActivity"
    android:background="@drawable/blurback">

    <LinearLayout
        android:id="@+id/app_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BNN AIO"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:fontFamily="@font/pacifico"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-helps to develop skills"
            android:layout_gravity="center"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/pacifico"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/app_name_layout"
        android:id="@+id/app_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:gravity="center"
            android:textAlignment="gravity"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/app_description_layout"
        android:id="@+id/app_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SIGN UP as"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/input_back"
                android:layout_marginEnd="5dp"
                android:text="STUDENT"
                android:textSize="18sp"
                android:textColor="#604B4C"
                android:textStyle="bold"/>

            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/input_back"
                android:layout_marginStart="5dp"
                android:text="TEACHER"
                android:textSize="18sp"
                android:textColor="#604B4C"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/app_confirmation"
        android:id="@+id/app_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOGIN as"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/input_back"
                android:layout_marginEnd="5dp"
                android:text="STUDENT"
                android:textSize="18sp"
                android:textColor="#604B4C"
                android:textStyle="bold"/>

            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/input_back"
                android:layout_marginStart="5dp"
                android:text="TEACHER"
                android:textSize="18sp"
                android:textColor="#604B4C"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>