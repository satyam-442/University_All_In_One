<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:id="@+id/setting_toolbar"
        layout="@layout/app_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backarrowSetting"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/setting_profile_name"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="47dp"
                android:src="@drawable/backarrow" />

            <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/setting_profile_name"
                android:layout_alignEnd="@+id/setting_profile_name"
                android:layout_marginStart="-17dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/backarrowSetting"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/pacifico"
                android:text="Update Your Identity!"
                android:textSize="35sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_profile_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_below="@id/hello"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="121dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="123dp"
                android:src="@drawable/default_avatar" />

            <EditText
                android:id="@+id/setting_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="42dp"
                android:background="@drawable/customize_inputs"
                android:ems="15"
                android:layout_below="@id/setting_profile_image"
                android:hint="Ful-name"
                android:inputType="textPersonName"
                android:labelFor="@id/login_user_name"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/setting_profile_contact"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_below="@+id/setting_profile_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/customize_inputs"
                android:ems="15"
                android:hint="Contact No."
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/setting_profile_rollno"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_below="@+id/setting_profile_contact"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/customize_inputs"
                android:ems="15"
                android:hint="Roll No."
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/setting_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="42dp"
                android:layout_below="@+id/setting_profile_rollno"
                android:background="@drawable/customize_inputs"
                android:ems="15"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:labelFor="@id/login_user_name"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/setting_profile_uid"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_below="@+id/setting_profile_email"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/customize_inputs"
                android:ems="15"
                android:hint="Unique ID"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <Button
                android:id="@+id/setting_update_profilebtn"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@id/setting_profile_uid"
                android:layout_alignParentStart="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custumbuttons"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>